#!/bin/bash
# Wrapper script for AFluID main.py

# Get the directory where this script is located
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

# Execute main.py with the python3 interpreter from the environment
# using the absolute path to main.py
python3 "$DIR/main.py" "$@"
